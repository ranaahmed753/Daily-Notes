<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181C27"
    tools:context=".view.CreateNotesActivity">
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/arrow_back"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/updateNotesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/backButton"
        app:layout_constraintTop_toTopOf="@+id/backButton"
        app:layout_constraintBottom_toBottomOf="@+id/backButton"
        android:layout_marginLeft="16dp"
        android:text="Update"
        android:textColor="@color/white"
        android:fontFamily="@font/nunito"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/notesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/updateNotesText"
        app:layout_constraintTop_toTopOf="@+id/updateNotesText"
        app:layout_constraintBottom_toBottomOf="@+id/updateNotesText"
        android:layout_marginLeft="5dp"
        android:text="Notes"
        android:textColor="@color/yellow"
        android:fontFamily="@font/nunito"
        android:textSize="16sp"/>
    <EditText
        android:id="@+id/titleEdittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateNotesText"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:inputType="textMultiLine"
        android:hint="Notes title"
        android:textSize="13sp"
        android:textColor="#B1B8C2"
        android:textColorHint="#B1B8C2"
        android:fontFamily="@font/nunito"
        android:background="@android:color/transparent"/>
    <EditText
        android:id="@+id/notesEdittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleEdittext"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:textSize="11sp"
        android:textColor="#B1B8C2"
        android:textColorHint="#B1B8C2"
        android:hint="Write something"
        android:fontFamily="@font/nunito"
        android:background="@android:color/transparent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/updateNotesTitleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:padding="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notesEdittext"
        android:background="@drawable/signup_btn">
        <TextView
            android:id="@+id/updateNotesTitleButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Update Notes Title"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito"
            android:textSize="15sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/updateNotesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateNotesTitleButton"
        android:background="@drawable/signup_btn">
        <TextView
            android:id="@+id/updateNotesButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Update Notes"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito"
            android:textSize="15sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>